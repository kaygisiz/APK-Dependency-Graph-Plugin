<idea-plugin>
    <id>com.kaygisiz.dependencygraph</id>
    <name>APK Dependency Graph</name>
    <version>1.0</version>
    <vendor email="ne.caner@hotmail.com">Void Ideas</vendor>

    <description><![CDATA[
      Displays injection dependencies of apk in browser.<br>
    ]]></description>
    <!-- <em>most HTML tags may be used</em> -->

    <!-- <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
    </change-notes> -->

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="145.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="DependencyGraph" text="Dependency Graph" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
            <action id="DisplayGraph" class="actions.DisplayGraphAction" text="Display Graph">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
            </action>
            <action id="PackageFilter" class="actions.SetPackageFilter" text="Set Package Filter..."/>
            <action id="SetGraphLibraryPath" class="actions.SetDependencyGraphAction"
                    text="Set Apk-Dependency-Graph Path..."/>
            <action id="SetApkPath" class="actions.SetApkPathAction" text="Set Apk Path..."/>
            <action id="SetInnerClassMode" class="actions.SetInnerClassMode" text="Enable/Disable Inner Classes"
                    description="Defines whether you want to skip inner classes on your graph (true to skip, false otherwise)."/>
        </group>
    </actions>

</idea-plugin>